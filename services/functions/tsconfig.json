{
  "compilerOptions": {
    "module": "NodeNext",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "ES2017",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noUncheckedIndexedAccess": true
  },
  "compileOnSave": true,
  "include": ["src"],
  "exclude": ["node_modules", "lib", "tests", "**/*.test.ts", "**/*.mock.ts"]
}
